<article class="edit-form">
    <form class="edit-post-form">
        <h2>
            Edit Post
        </h2>
        <div class="form-group">
            <input class="form-control edit-input" name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div class="form-group">
            <input class="form-control edit-input" name="content" type="text" value="{{post.content}}" />
        </div>
        <div class="post-details">
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="button-options">
            <button type="submit" class="btn btn-dark btn-lg">Save changes</button>
            <button type="button" class="delete-post btn btn-dark btn-lg">Delete post</button>
            <a href="/userprofile" class="btn btn-dark btn-lg"> Cancel</a>
        </div>

    </form>
</article>
</form>

{{#each posts as |post|}}
<li>
    {{> forum-info post}}
</li>
{{> comment-info post.comments}}

<br>
<hr>
{{!-- Comment: This is for the post --}}
{{/each}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>