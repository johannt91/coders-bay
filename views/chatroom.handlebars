
<div class="socket-div">
        <div class="chat-container">
            <div class="chat-header">
                <h2><i class="fas fa-comments"></i>Room Name: </h2>
                <p id="room-name">{{room}}</p> 
            </div>
        </div>
            <div id="conversation" class="chat-main">
                <div class="chat-sidebar">
                        <ul id="users">Users</ul>
                        <h1 id="currentUser">{{username}}</h1>
                </div>

            <div id="conversationHistory">
                <div class="chat-messages"></div>
            </div>
        <div class="chat-form-container">
            <form id="chat-form">
                <input id="msg" type="text" class="chat-control type_msg" placeholder="Type your message here.................." required autocomplete="off" />
                <button type="submit" class="btn btn-main"> Send</button>
            </form>
            <a href="/" class="btn">Leave Room</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.socket.io/3.1.3/socket.io.min.js" integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh" crossorigin="anonymous"></script>
